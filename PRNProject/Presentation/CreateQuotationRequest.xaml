<Page x:Class="PRNProject.Presentation.CreateQuotationRequest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PRNProject.Presentation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateQuotationRequest">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Quotation Request Name:" FontSize="40"/>
            <TextBox x:Name="QuotationRequestNameTextBox" Width="500" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,10"/>

            <TextBlock Text="Labor Price:" FontSize="40"/>
            <TextBox x:Name="LaborPriceTextBox" Width="500" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,10"/>

            <Button Content="Submit" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10" Click="SubmitButton_Click" FontSize="20"/>
        </StackPanel>
        
    </Grid>
</Page>
