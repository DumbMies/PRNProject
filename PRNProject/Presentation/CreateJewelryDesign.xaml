<Page x:Class="PRNProject.Presentation.CreateJewelryDesign"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PRNProject.Presentation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateJewelryDesign">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Design Name:" FontSize="40"/>
            <TextBox x:Name="DesignNameTextBox" Width="500" Height="35" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,10"/>
            <TextBlock Text="Design Image:" FontSize="40"/>
            <Button Content="Upload Image" Click="UploadImageButton_Click" FontSize="20" Margin="0,10,0,10"/>
            <Button Content="Submit" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10" Click="SubmitButton_Click" FontSize="20"/>
        </StackPanel>
    </Grid>
</Page>
