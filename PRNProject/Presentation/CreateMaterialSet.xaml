<Page x:Class="PRNProject.Presentation.CreateMaterialSet"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PRNProject.Presentation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateMaterialSet">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Gemstone:" FontSize="40"/>
            <ComboBox x:Name="GemstoneComboBox" Width="350" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,10"/>

            <TextBlock Text="Material:" FontSize="40"/>
            <ComboBox x:Name="MaterialComboBox" Width="350" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,10"/>

            <TextBlock Text="Weight (gam):" FontSize="40"/>
            <TextBox x:Name="WeightTextBox" Width="350" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,10"/>

            <Button Content="Submit" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10" Click="SubmitButton_Click" FontSize="20"/>
        </StackPanel>
        
    </Grid>
</Page>
