<Page x:Class="PRNProject.Presentation.CreateProductionRequest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PRNProject.Presentation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateProductionRequest">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Production Request Name:" FontSize="40"/>
            <TextBox x:Name="ProductionRequestNameTextBox" Width="520" Height="30" Margin="0,0,0,10"/>
            <TextBlock Text="Production Request Quantity:" FontSize="40"/>
            <TextBox x:Name="ProductionRequestQuantityTextBox" Width="520" Height="30" Margin="0,0,0,10"/>
            <Button Content="Submit" Width="100" Click="SubmitButton_Click" FontSize="20"/>
        </StackPanel>
    </Grid>
</Page>
