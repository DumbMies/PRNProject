<Window x:Class="PRNProject.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRNProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid HorizontalAlignment="Center">
            <TextBlock Text="Jewelry Production Order System" FontSize="42" FontWeight="Bold" Margin="0,20,0,0"/>
        </Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Email:" FontSize="30"/>
            <TextBox x:Name="EmailTextBox" Text="customer@gmail.com" Width="400" Height="40" FontSize="25" Margin="0,0,0,10"/>
            <TextBlock Text="Password:" FontSize="30"/>
            <PasswordBox x:Name="PasswordBox" Password="123456" Width="400" Height="40" FontSize="25" Margin="0,0,0,10"/>
            <Button Content="Login" Width="100" FontSize="20" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
