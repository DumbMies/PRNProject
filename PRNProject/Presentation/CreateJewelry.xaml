<Page x:Class="PRNProject.Presentation.CreateJewelry"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PRNProject.Presentation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateJewelry">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Jewelry Name:" FontSize="40"/>
            <TextBox x:Name="JewelryNameTextBox" Width="500" Height="35" Margin="0,0,0,10"/>

            <TextBlock Text="Jewelry Description:" FontSize="40"/>
            <TextBox x:Name="JewelryDescriptionTextBox" Width="500" Height="35" Margin="0,0,0,10"/>


            <Button Content="Submit" FontSize="25"  VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10" Click="SubmitButton_Click"/>
        </StackPanel>
        
    </Grid>
</Page>
